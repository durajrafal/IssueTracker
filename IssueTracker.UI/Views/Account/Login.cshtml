@using IssueTracker.UI.Models.Account;
@model LoginViewModel

@{
}

<div class="card mt-md-5 mt-2">

    <div class="row">
        <div class="col-md-6">
            <div class="card-body">
                <h4 class="card-title text-center">Login with credentials</h4>
                <form class="justify-content-center" method="post">
                    <div class="form-group">
                        <label for="inputEmail" class="form-label mt-4">Email address</label>
                        <input asp-for="Email" type="email" class="form-control" id="inputEmail" aria-describedby="emailHelp" placeholder="Enter email">
                    </div>
                    <div class="form-group">
                        <label for="inputPassword" class="form-label mt-4">Password</label>
                        <input asp-for="Password" type="password" class="form-control" id="inputPassword" placeholder="Password">
                    </div>
                    <div class="form-check mt-2 ms-2">
                        <input asp-for="IsRememberChecked" class="form-check-input" type="checkbox" value="" id="checkRememberMe">
                        <label class="form-check-label" for="checkRememberMe">
                            Remember me
                        </label>
                    </div>
                    <div class="col-6 mx-auto mt-4">
                        <button type="submit" class="btn btn-success w-100">Submit</button>
                    </div>
                </form>
                <hr />
                <div class="row text-center mt-2">
                    <a asp-controller="Account" asp-action="Register">Don't have an account? Register now!</a>
                </div>
                <div class="row text-center mt-2">
                    <a asp-controller="Account" asp-action="ResetPassword">Forgot Password? No worries!</a>
                </div>
            </div>

        </div>
        <div class="col-md-6">
            <div class="card-body">
                <h4 class="card-title text-center">Login with demo users</h4>
                <div class="row">
                    <div class="col-md-6">
                        <div class="row mt-3 mx-2 mx-md-0">
                            <div class="card bg-primary">
                                <a class="text-decoration-none text-white" asp-action="LoginAsDeveloper">
                                    <div class="row">
                                        <h1 class="text-center"><i class="bi bi-person-fill"></i></h1>
                                    </div>
                                    <div class="row">
                                        <h5 class="text-center">Demo Developer</h5>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <div class="row mt-3 mx-2 mx-md-0">
                            <div class="card bg-primary">
                                <a class="text-decoration-none text-white" asp-action="LoginAsManager">
                                    <div class="row">
                                        <h1 class="text-center"><i class="bi bi-person-lines-fill"></i></h1>
                                    </div>
                                    <div class="row">
                                        <h5 class="text-center">Demo Manager</h5>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row mt-3 mx-2 mx-md-0">
                            <div class="card bg-primary">
                                <a class="text-decoration-none text-white" asp-action="LoginAsAdmin">
                                    <div class="row">
                                        <h1 class="text-center"><i class="bi bi-person-fill-gear"></i></h1>
                                    </div>
                                    <div class="row">
                                        <h5 class="text-center">Demo Admin</h5>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>