@using IssueTracker.UI.Models.Admin;

@{
    ViewData["Title"] = "Manage";
}

<div class="row">
    @Html.AntiForgeryToken()
    <div class="text-center" data-loading>
        <h3>Loading...</h3>
    </div>
    <div class="row d-none" data-loaded>
        
        <div class="col-12 text-center">
            <div class="mt-2 d-flex justify-content-center gap-3">
                <button type="button" class="btn btn-primary" v-on:click="UpdateProject()">
                    Update Project
                </button>
                <a asp-action="Index" class="btn btn-secondary text-white text-decoration-none">
                    Discard changes
                </a>
            </div>
            <div v-if="!editTitle" class="my-2 d-flex justify-content-center gap-3">
                    <h3 class="m-0" data-project-title>{{project.title}}</h3>
                    <button class="btn btn-secondary py-0" v-on:click="ToggleEditTitle"><i class="bi bi-pencil-square"></i></button>
            </div>
            <div v-else class="my-2 d-flex justify-content-center gap-3">
                <input type="text" class="form-control" v-model="newTitle"/>
                <button class="btn btn-success py-0" v-on:click="AcceptNewTitle"><i class="bi bi-check-circle"></i></button>
                <button class="btn btn-danger py-0" v-on:click="ToggleEditTitle"><i class="bi bi-x-circle"></i></button>
            </div>


        </div>
        <div class="col-lg-6">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="m-0">Members</h4>

                </div>
                <div class="my-2" style="width:20rem;">
                    <input type="text" placeholder="Search member.." class="form-control" v-model="memberFilter" />
                </div>
            </div>
            <div class="table-responsive" style="max-height:30rem;">
                <table class="table" id="users-table" data-members-table>
                    <thead class="bg-primary" style="position:sticky; top: -1px;">
                        <tr>
                            <th scope="col">@Html.DisplayNameForInnerType((UserAdminViewModel u) => u.Email)</th>
                            <th scope="col">@Html.DisplayNameForInnerType((UserAdminViewModel u) => u.FirstName)</th>
                            <th scope="col">@Html.DisplayNameForInnerType((UserAdminViewModel u) => u.LastName)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="m-0">Other Users</h4>

                </div>
                <div class="my-2" style="width:20rem;">
                    <input type="text" placeholder="Search user.." class="form-control" v-model="userFilter" />
                </div>
            </div>
            <div class="table-responsive" style="max-height:30rem;">
                <table class="table" id="user-table" data-other-users-table>
                    <thead class="bg-primary" style="position:sticky; top: -1px;">
                        <tr>
                            <th scope="col">@Html.DisplayNameForInnerType((UserAdminViewModel u) => u.Email)</th>
                            <th scope="col">@Html.DisplayNameForInnerType((UserAdminViewModel u) => u.FirstName)</th>
                            <th scope="col">@Html.DisplayNameForInnerType((UserAdminViewModel u) => u.LastName)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

@section Scripts
    {
    <script src="~/js/dist/projects-admin/details.js" type="module"></script>
}