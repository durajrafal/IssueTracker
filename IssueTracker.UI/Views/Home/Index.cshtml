@using IssueTracker.Application.Projects.Queries.GetProjects;
@using Microsoft.AspNetCore.Authorization

@model IQueryable<IssueTracker.Application.Projects.Queries.GetProjects.ProjectSummaryDto>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-2">
    <table class="table table-dark table-striped table-hover">
        <thead class="table-primary">
            <tr>
                <th scope="col">@Html.DisplayNameForInnerType((ProjectSummaryDto p) => p.Id)</th>
                <th scope="col">@Html.DisplayNameForInnerType((ProjectSummaryDto p) => p.Title)</th>
                <th scope="col">@Html.DisplayNameForInnerType((ProjectSummaryDto p) => p.NumberOfMembers)</th>
            </tr>
        </thead>
        <tbody>
            @{
                var modelArr = Model.ToArray();
                for (int i = 0; i < modelArr.Length; i++)
                {
                    <tr>
                        <td class="text-end">@modelArr[i].Id</td>
                        <td style="width:99%" scope="row">@modelArr[i].Title</td>
                        <td class="text-center"><i class="bi bi-person-fill"></i> @modelArr[i].NumberOfMembers</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
