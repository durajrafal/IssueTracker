@using IssueTracker.UI.Models.Account;
@model ResetPasswordViewModel

@{
}

<div class="card mt-md-5 mt-2 w-100" style="max-width: 40rem;">
    <div class="row">
        <div class="card-body">
            <div class="row mt-3 justify-content-center">
            </div>
            <h4 class="card-title text-center">Register your account</h4>
            <form class="justify-content-center needs-validation mx-3" novalidate method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <fieldset disabled="">
                        <label for="inputEmail" class="form-label mt-4">Email Address</label>
                        <input asp-for="Email" type="email" class="form-control" id="inputEmail"
                               aria-describedby="emailHelp" required>
                    </fieldset>
                </div>
                <div class="row">
                    <div class="form-group col-6">
                        <label for="inputPassword" class="form-label mt-4">Password</label>
                        <input asp-for="Password" type="password" class="form-control" id="inputPassword" placeholder="Pass21">
                        <span asp-validation-for="Password" class="invalid-feedback"></span>
                    </div>
                    <div class="form-group col-6">
                        <label for="inputConfirmPassword" class="form-label mt-4">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" id="inputConfirmPassword" placeholder="Pass21">
                        <span asp-validation-for="ConfirmPassword" class="invalid-feedback"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input asp-for="Token" type="hidden" class="form-control">
                </div>
                <div class="col-8 d-flex mt-4 mx-auto justify-content-center">
                    <button type="submit" class="btn btn-success px-5">Submit</button>
                </div>
            </form>
            <hr />
            <div class="d-flex justify-content-center mt-2 text-success">
                Don't have an account?&nbsp<a asp-area="Identity" asp-controller="Account" asp-action="Register">Register now!</a>
            </div>
            <div class="d-flex justify-content-center mt-2 text-success">
                Already have an account?&nbsp<a asp-area="Identity" asp-controller="Account" asp-action="Login">Login now!</a>
            </div>
        </div>
    </div>
</div>