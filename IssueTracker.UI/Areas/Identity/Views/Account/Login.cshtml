@using IssueTracker.UI.Models.Account;
@using Microsoft.AspNetCore.Html;
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="card mt-md-5 mt-2 w-100" style="max-width: 60rem;">
    <div class="row">
        <div class="card-body">
            <div class="row mt-3 justify-content-center">
                @if (TempData["EmailConfirmSuccess"] != null)
                {
                    <div class="col-10 alert alert-dismissible alert-success text-center">
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        @(new HtmlString(TempData["EmailConfirmSuccess"].ToString()))
                    </div>
                }
            </div>
        </div>
        <div class="col-md-6">
            <div class="card-body">
                <h4 class="card-title text-center">Log in with credentials</h4>
                <form class="justify-content-center needs-validation" novalidate method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label for="inputEmail" class="form-label mt-4">Email Address</label>
                        <input asp-for="Email" type="email" class="form-control" id="inputEmail"
                               aria-describedby="emailHelp" placeholder="Enter email" required>
                        <span asp-validation-for="Email" class="invalid-feedback"></span>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword" class="form-label mt-4">Password</label>
                        <input asp-for="Password" type="password" class="form-control" id="inputPassword" placeholder="Enter password">
                        <span asp-validation-for="Password" class="invalid-feedback"></span>
                    </div>
                    <div class="form-check mt-2 ms-2">
                        <input asp-for="IsRememberChecked" class="form-check-input" type="checkbox" value="" id="checkRememberMe">
                        <label class="form-check-label" for="checkRememberMe">
                            Remember me
                        </label>
                    </div>
                    <div class="col-6 mx-auto mt-4">
                        <button type="submit" class="btn btn-success w-100">Submit</button>
                    </div>
                </form>
                <div class="row d-md-none mt-3 justify-content-center">
                    @if (Model?.ResultMessage != null)
                    {
                        <div class="col-10 alert alert-dismissible alert-danger text-center">
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            @Model.ResultMessage
                        </div>
                    }
                </div>
                <hr />
                <div class="d-flex justify-content-center mt-2 text-success">
                    Don't have an account?&nbsp<a asp-area="Identity" asp-controller="Account" asp-action="Register">Register now!</a>
                </div>
                <div class="d-flex justify-content-center mt-2 text-success">
                    Forgot Password?&nbsp<a asp-area="Identity" asp-controller="Account" asp-action="ResetPassword"> No worries!</a>
                </div>
            </div>

        </div>
        <div class="col-md-6">
            <div class="card-body">
                <h4 class="card-title text-center">Log in as demo users</h4>
                <div class="row">
                    <div class="col-md-6">
                        <div class="row mt-3 mx-2 mx-md-0">
                            <div class="card bg-primary">
                                <a class="text-decoration-none text-white" asp-action="LoginAsDeveloper">
                                    <div class="row">
                                        <h1 class="text-center"><i class="bi bi-person-fill"></i></h1>
                                    </div>
                                    <div class="row">
                                        <h5 class="text-center">Demo Developer</h5>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <div class="row mt-3 mx-2 mx-md-0">
                            <div class="card bg-primary">
                                <a class="text-decoration-none text-white" asp-action="LoginAsManager">
                                    <div class="row">
                                        <h1 class="text-center"><i class="bi bi-person-lines-fill"></i></h1>
                                    </div>
                                    <div class="row">
                                        <h5 class="text-center">Demo Manager</h5>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row mt-3 mx-2 mx-md-0">
                            <div class="card bg-primary">
                                <a class="text-decoration-none text-white" asp-action="LoginAsAdmin">
                                    <div class="row">
                                        <h1 class="text-center"><i class="bi bi-person-fill-gear"></i></h1>
                                    </div>
                                    <div class="row">
                                        <h5 class="text-center">Demo Admin</h5>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@if (Model?.ResultMessage !=  null)
{
    <div class="row mt-4 justify-content-center">
        <div class="d-none d-md-block">
            <div class="alert alert-dismissible alert-danger text-center">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                @Model.ResultMessage
            </div>
        </div>
    </div>
}