@using IssueTracker.UI.Models.Account;
@using Microsoft.AspNetCore.Html;
@model UpdateViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="card mt-md-5 mt-2 w-100" style="max-width: 40rem;">
    <div class="row">
        <div class="card-body">
            <h4 class="card-title text-center">Edit your account</h4>
            <form class="justify-content-center needs-validation mx-3" novalidate method="post">
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="form-group col-6">
                        <label for="inputFirstName" class="form-label mt-4">First Name</label>
                        <input asp-for="FirstName" type="text" class="form-control" id="inputFirstName" value="@Model.FirstName">
                        <span asp-validation-for="FirstName" class="invalid-feedback"></span>
                    </div>
                    <div class="form-group col-6">
                        <label for="inputLastName" class="form-label mt-4">Last Name</label>
                        <input asp-for="LastName" type="text" class="form-control" id="inputLastName" placeholder="Wick">
                        <span asp-validation-for="LastName" class="invalid-feedback"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input asp-for="Email" type="hidden" class="form-control" id="inputEmail" value="@Model.Email">
                </div>
                <hr />
                <div class="form-group mt-2">
                    <div class="form-check form-switch">
                        <input asp-for="PasswordChangeRequested" class="form-check-input" type="checkbox" id="passwordChangeSwitch">
                        <label class="form-check-label" for="passwordChangeSwitch">Change Password</label>
                    </div>
                </div>
                <div class="row" style="display:none;" id="passwordChangeRow">
                    <div class="form-group col-6">
                        <label for="inputPassword" class="form-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control" id="inputPassword" value="@Model.Password">
                        <span asp-validation-for="Password" class="invalid-feedback"></span>
                    </div>
                    <div class="form-group col-6">
                        <label for="inputConfirmPassword" class="form-label">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" id="inputConfirmPassword" value="@Model.Password">
                        <span asp-validation-for="ConfirmPassword" class="invalid-feedback"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-6 d-flex align-items-end">
                            <a href="javascript: history.go(-1)"><i class="bi bi-arrow-bar-left me-1"></i>Back</a>
                    </div>
                    <div class="form-group col-6">
                        <div class="col-8 d-flex mt-4 mx-auto justify-content-center">
                            <button type="submit" class="btn btn-success px-5">Update</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById("passwordChangeSwitch").onchange = (event) => {
        var el = document.getElementById("passwordChangeRow");

        if (el.style.display === "none") 
        {
            el.style.display = "flex";
        }
        else
        {
            el.style.display = "none";
        }
    }
</script>