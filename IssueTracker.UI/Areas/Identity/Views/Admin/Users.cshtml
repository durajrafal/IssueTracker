@using IssueTracker.UI.Models.Admin;

@model IEnumerable<UserAdminViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="my-2" style="width:20rem;">
            <input type="text" placeholder="Search.." class="form-control" data-search-input/>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-8">
            <div class="table-responsive" style="max-height:52vh;">
                <table class="table table-hover" data-users-table>
                    <thead class="bg-primary" style="position:sticky; top: -1px;">
                        <tr>
                            <th scope="col"></th>
                            <th scope="col">@Html.DisplayNameForInnerType((UserAdminViewModel u) => u.Email)</th>
                            <th scope="col">@Html.DisplayNameForInnerType((UserAdminViewModel u) => u.FirstName)</th>
                            <th scope="col">@Html.DisplayNameForInnerType((UserAdminViewModel u) => u.LastName)</th>
                            <th scope="col">@Html.DisplayNameForInnerType((UserAdminViewModel u) => u.RoleClaim)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var modelArr = Model.ToArray();
                            for (int i = 0; i < modelArr.Length; i++)
                            {
                                string id = modelArr[i].UserId;
                                string tableRowClass;
                                if (i % 2 == 0)
                                {
                                    tableRowClass = "table-secondary";
                                }
                                else
                                {
                                    tableRowClass = "table-dark";
                                }
                                <tr class="@tableRowClass" name="table-row" data-id="@id">
                                    <td>@i</td>
                                    <td>@modelArr[i].Email</td>
                                    <td>@modelArr[i].FirstName</td>
                                    <td>@modelArr[i].LastName</td>
                                    <td>@modelArr[i].RoleClaim</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-xl-4 mh-xl-100 mh-50">
            <div data-placeholder class="pt-xl-0 pt-3">
                <h6 class="text-center">
                    Please select user...
                </h6>
            </div>
            <div data-partialView>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <script src="~/js/dist/admin/users-admin.js" type="module"></script>
}
